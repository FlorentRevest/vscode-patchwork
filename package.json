{
  "name": "patchwork",
  "displayName": "Patchwork",
  "description": "Patchwork code review integration",
  "publisher": "florent-revest",
  "license": "MIT",
  "icon": "icon.png",
  "version": "1.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlorentRevest/vscode-patchwork.git"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:patchwork.series",
    "onCommand:patchwork.open"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "patchwork.refreshSeries",
        "title": "Patchwork: Refresh series",
        "icon": "$(refresh)"
      },
      {
        "command": "patchwork.saveFilter",
        "title": "Patchwork: Save filter",
        "icon": "$(save-as)"
      },
      {
        "command": "patchwork.clearFilter",
        "title": "Patchwork: Clear filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "patchwork.deleteFilter",
        "title": "Patchwork: Delete filter",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "patchwork",
          "title": "Patchwork",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "patchwork": [
        {
          "id": "patchwork.series",
          "name": "Series",
          "type": "tree",
          "visibility": "visible"
        },
        {
          "id": "patchwork.savedFilters",
          "name": "Saved Filters",
          "type": "tree",
          "visibility": "visible"
        },
        {
          "id": "patchwork.filter",
          "name": "Filter",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "patchwork.series",
        "contents": "Loading..."
      },
      {
        "view": "patchwork.savedFilters",
        "contents": "No saved filters"
      },
      {
        "view": "patchwork.filter",
        "contents": "Loading..."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "patchwork.refreshSeries",
          "when": "view == patchwork.series",
          "group": "navigation@1"
        },
        {
          "command": "patchwork.saveFilter",
          "when": "view == patchwork.savedFilters",
          "group": "navigation@1"
        },
        {
          "command": "patchwork.clearFilter",
          "when": "view == patchwork.filter",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "patchwork.deleteFilter",
          "when": "view == patchwork.savedFilters",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm-run-all compile:*",
    "compile:extension": "tsc -p ./",
    "compile:view": "webpack --mode development",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:view": "webpack --watch --mode development",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^12.11.7",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-linkify": "^1.0.1",
    "@types/uuid": "^8.3.1",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "npm-run-all": "^4.1.5",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.15",
    "typescript": "^4.8.2",
    "vscode-test": "^1.5.0",
    "webpack": "^5.21.1",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.4.5",
    "@vscode/codicons": "^0.0.32",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "4rest": "^2.0.0",
    "dayjs": "1.10.4",
    "gitdiff-parser": "^0.2.2",
    "jsdom": "^20.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-linkify": "^1.0.0-alpha",
    "uuid": "^8.3.2"
  }
}
